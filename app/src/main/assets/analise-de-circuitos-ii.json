            }
        },
        {
            "name": "Tensão de Saída",
            "description":"Somador Inversor",
            "latex": ["V_o = A_{v1} \\times V_{i1} + A_{v2} \\times V_{i2} + \\dots + A_{vn} \\times V_{in}"],
            "constants":null,

            "variables":
            {
                 "Vo": "Tensão de saída  (Volt = V)",
                 "Avn": "Ganhos presentes no circuito",
